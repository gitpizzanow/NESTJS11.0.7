# === Database ===
DATABASE_URL="mysql://username:0000@127.0.0.1:3306/db"

# === App Settings ===
PORT=3000
API_PREFIX=api

# === Logging ===
ACCESS_LOGGER_FILE_SIZE=10M
ACCESS_LOGGER_FILE_INTERVAL=1d

# === Session Configuration ===
SESSION_SECRET=myStrongSessionSecret
SESSION_RESAVE=false
SESSION_SAVE_UNINITIALIZED=false
SESSION_COOKIE_MAX_AGE=86400000      # 1 day in milliseconds
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SECURE=false          # true if using HTTPS in production

# === Helmet (Security Headers) ===
HELMET_CONTENT_SECURITY_POLICY=false # or provide a JSON policy if enabled

# === CORS ===
CORS_ORIGINS=["http://localhost:3000"]  # JSON array or a string with comma-separated origins

# === Swagger / OpenAPI ===
PRODUCTION=false
OPENAPI_TITLE=My API
OPENAPI_DESCRIPTION=API Documentation
OPENAPI_VERSION=1.0
OPENAPI_PATH=docs
